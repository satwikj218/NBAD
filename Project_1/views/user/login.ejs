<%- include('../partials/header.ejs')%>
<link rel="stylesheet" href="/css/newTrade.css">
    <section class="my-5">
        <div class="container newTrade">
            <div class="d-flex justify-content-center h-100">
                <div class="user_card">
                    <div>
                        <h3 class="newTrade_text py-3">Login</h3>
                    </div>
                    <div class="d-flex justify-content-center form-container">
                        <form action = '/users/login' method = 'POST'>
                            <div class="input-group mb-3">
                                <input type="email" id="email" name="email" class="form-control input_user"
                                    placeholder="Email" required>
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" id="password" name="password" class="form-control input_user"
                                    placeholder="Password" required>
                            </div>
                            <div class="d-flex justify-content-center mt-3 newTrade_container">
                                <button class="btn btn-primary newTrade_btn">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

