<%- include('../partials/header.ejs')%>
<link rel="stylesheet" href="/css/newTrade.css">
<section class="my-5">
    <div class="container newTrade">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
                <div>
                    <h3 class="newTrade_text py-3">Edit Trade</h3>
                </div>
                <div class="d-flex justify-conent-center form-container">
                    <form method="post" action="/books/<%= book.id%>?_method=PUT">
                        <div class="input-group mb-3">
                            <label for="title"><b>Title</b></label>
                            <input type="text" id="title" name="title" value = "<%= book.title%>" class = "fixed-width mx-5 form-control input_user">
                        </div>
                        <div class="input-group mb-3">
                            <label for="category"><b>Category</b></label>
                            <input type="text" id="category" name="category" value = "<%= book.category%>" class = "fixed-width mx-3 form-control input_user">
                        </div>
                        <div class="input-group mb-3">
                            <label for="author"><b>Author</b></label>
                            <input type="text" id="author" name="author" value = "<%= book.author%>" class = "fixed-width mx-4 form-control input_user">
                        </div>
                        <div class="input-group mb-3">
                            <label for="title"><b>Details</b></label>
                            <textarea rows="3" id="details" name="details" class = "fixed-width mx-4 form-control input_user"><%= book.details%></textarea>
                        </div>
                        <div class="d-flex justify-content-center mt-3 newTrade_container">
                            <button class="btn btn-primary newTrade_btn">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/footer.ejs')%>
